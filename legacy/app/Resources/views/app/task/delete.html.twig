{% extends 'base.html.twig' %}

{% form_theme form with ['bootstrap_3_horizontal_layout.html.twig'] %}

{% block menu %}
{% endblock %}

{% block content %}
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h1>{{ "Delete %task%?"|trans({'%task%': task.title}) }}</h1>
                <p class="lead alert alert-danger">
                    {{ "This action can not be undone, all related notes and files will be deleted too."|trans }}
                </p>
                {{ form_start(form) }}
                {{ form_errors(form) }}
                <div class="text-center">
                    {{ form_row(form.submit) }}
                </div>
                {{ form(form) }}
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}
