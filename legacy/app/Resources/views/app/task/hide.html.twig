{% extends 'base.html.twig' %}

{% form_theme form with ['bootstrap_3_horizontal_layout.html.twig'] %}

{% block menu %}
{% endblock %}

{% block content %}
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h1>{{ "Remember me later" }}</h1>
                {{ form_start(form) }}
                {{ form_errors(form) }}
                {{ form_row(form.time) }}
                <div class="text-center">
                    {{ form_row(form.submit) }}
                </div>
                {{ form(form) }}
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}
