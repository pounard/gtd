<!DOCTYPE html>
<html>
{% set base_path = '/' %}
<head>
<meta charset="utf-8" />
<base href="/" />
<title>{% block title %}Getting Things Done{% endblock %}</title>
<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
<meta name="apple-mobile-web-app-capable" content="yes" />
<meta name="viewport" content="user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimal-ui" />
<meta name="apple-mobile-web-app-status-bar-style" content="yes" />
<link rel="stylesheet" href="{{ base_path }}dist/css/style.css">
<script src="{{ base_path }}dist/js/script.min.js"></script>
<script type="text/javascript">
var basePath = "{{ base_path }}";
</script>
</head>
{% block body %}
<body>
<nav class="navbar navbar-inverse navbar-static-top">
    <div class="container-fluid">
        <div class="navbar-header">
            <button id="menu-toggle" type="button" class="navbar-toggle collapsed" aria-expanded="false">
                <span class="sr-only">{{ "Toggle navigation"|trans }}</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            {% block backto %}
                <a class="navbar-brand" href="{{ path('app_tasks') }}" title="{{ "Go to home"|trans }}">
                    <span class="glyphicon glyphicon-th-list" aria-hidden="true"></span>
                    <span class="sr-only">{{ "Go to home"|trans }}</span>
                </a>
            {% endblock %}
            <a class="navbar-brand" href="#">{% block page_title %}Getting things done{% endblock %}</a>
        </div>
    </div>
</nav>
<div id="app-body">
    <div id="app-panel" class="clearfix">
        {% block content %}<h1>Getting things done</h1>{% endblock %}
    </div>
    <div id="menu-panel" class="inverse">
        {% block menu %}{% endblock %}
        <hr/>
        {% include 'GoatAccountBundle:Account:status.html.twig' %}
    </div>
</div>
</body>
{% endblock %}
</html>